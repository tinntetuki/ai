# Docker Environment Configuration for AI Content Creator
# Copy this file to .env and customize for your deployment

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# === Database Configuration ===
DATABASE_URL=postgresql://ai_user:ai_password@postgres:5432/ai_content_db
POSTGRES_DB=ai_content_db
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=ai_password

# === Redis Configuration ===
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# === Storage Paths ===
DATA_PATH=/app/data
OUTPUT_PATH=/app/data/output
TEMP_PATH=/app/data/temp
CACHE_PATH=/app/cache

# === Processing Configuration ===
MAX_WORKERS=4
MAX_CONCURRENT_TASKS=2
PROCESSING_TIMEOUT=3600
MAX_FILE_SIZE=500MB

# === GPU Configuration ===
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# === External API Keys (Optional) ===
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here
OPENAI_API_KEY=your_openai_api_key_here

# === Security Configuration ===
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# === Monitoring Configuration ===
ENABLE_METRICS=True
METRICS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin123

# === Email Configuration (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@ai-content-creator.com

# === File Processing Limits ===
MAX_VIDEO_SIZE=500MB
MAX_AUDIO_SIZE=100MB
MAX_IMAGE_SIZE=50MB
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv,wmv
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,aac,flac
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,bmp,webp

# === Model Configuration ===
DEFAULT_UPSCALE_MODEL=RealESRGAN_x4plus
DEFAULT_SPEECH_MODEL=base
DEFAULT_TTS_PROVIDER=edge
DEFAULT_DETECTION_MODEL=yolov8s.pt

# === Performance Tuning ===
WORKER_CONCURRENCY=2
WORKER_PREFETCH_MULTIPLIER=1
TASK_SOFT_TIME_LIMIT=3000
TASK_TIME_LIMIT=3600

# === Logging Configuration ===
LOG_FORMAT=json
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_COMPRESSION=gzip